<!DOCTYPE html>
<html>

<head>
    <title>Musicave - Trending</title>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Sen:wght@400;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link rel="stylesheet" href="./style.css">
    <script src="https://kit.fontawesome.com/e35a902f27.js" crossorigin="anonymous"></script>
    {{> style}}
</head>

<body>
    <div id="wrapper">
        {{> header}}

        {{!-- Left : Sidebar --}}
        <div class="split left">
            <div class="nav">
                <nav class="sidebar" style="margin-top: 60%;">

                    {{!-- Home --}}
                    <a href="/" title="Home">
                        <i class="fa fa-home"></i>
                    </a>

                    {{!-- Trending --}}
                    <a href="/trending" title="Trending">
                        <i class="fa-solid fa-arrow-trend-up"></i>
                    </a>

                    {{!-- Recommend random songs --}}
                    <a href="/random" title="Shuffle">
                        <i class="fa-solid fa-shuffle"></i>
                    </a>

                </nav>
            </div>
        </div>

        {{!-- Right : Results --}}
        <div class="split right">
            <div class="contain" style="display: flex; flex-direction:column;">
                <div>
                    <h1
                        style="font-size:xx-large; text-align: center; margin:20px 20px 0; font-weight:700;font-family:'Sen', sans-serif; color:aliceblue">
                        Trending Albums</h1>
                </div>
                <div>

                    {{!-- Show trending albums --}}
                    {{#each trending}}
                    <div class="music-card newreimg">
                        <a href="/albumtrack/{{this.id}}" style="text-decoration: wavy; cursor-pointer:pointer"
                            class="links" style="color: black;">
                            <center>
                                <div class="">
                                    <img class="rimage" id="songImageOne" src="{{this.image}}" alt="Card image cap">
                                </div>
                            </center>
                        </a>

                        <div>
                            <center style="margin-bottom: 5px;">

                                {{!-- Open tracks abailable in the album --}}
                                <a href="/albumtrack/{{this.id}}" style="text-decoration: wavy;" class="links"
                                    style="color: black;">
                                    <marquee width=80% onMouseOver="javascript:stop()" onMouseOut="javascript:start()"
                                        direction="left" behavior="scroll" dir="ltr" height="30%" hspace="10" loop
                                        scrolldelay=50>
                                        <h5 class="album-name pt-4 pb-2" style="width: 40%;" id="songNameOne"
                                            value="{{this.title}}">
                                            {{this.title}}</h5>
                                    </marquee>
                                </a>
                            </center>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    <script>
        function myFunction() {
            document.getElementById("myDropdown").classList.toggle("show");
        }

        // Close the dropdown menu if the user clicks outside of it
        window.onclick = function (event) {
            if (!event.target.matches('#myimg')) {
                var dropdowns = document.getElementsByClassName("dropdown-content");
                var i;
                for (i = 0; i < dropdowns.length; i++) {
                    var openDropdown = dropdowns[i];
                    if (openDropdown.classList.contains('show')) {
                        openDropdown.classList.remove('show');
                    }
                }
            }
        }
    </script>
</body>

</html>